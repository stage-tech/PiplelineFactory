{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2016", "dom"],
    "paths": {
      "@stage-tech/sphinx-pipeline-factory-cdk": ["../cdk/src"],
      "@stage-tech/sphinx-pipeline-factory-lambda": ["../lambda/src"],
      "@stage-tech/sphinx-pipeline-factory-trigger": ["../trigger/src"],
    },
  }
}
